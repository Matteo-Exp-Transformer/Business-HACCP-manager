{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022", "DOM"],
    "jsx": "react-jsx",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    "noEmit": true,
    "allowJs": false,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": { "*": ["./*"] }
  },
  "include": ["src"]
}
